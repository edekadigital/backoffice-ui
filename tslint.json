{
  "extends": ["gts/tslint.json", "tslint-react"],
  "rules": {
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case"
    ],
    "no-default-export": false,
    "jsx-no-lambda": false
  },
  "linterOptions": {
    "exclude": ["**/*.stories.mdx"]
  }
}
